@model Project.Models.InstituteLogin

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    window.history.forward(-1);
</script>

<link href="~/Scripts/Create.css" rel="stylesheet" type="text/css" />
<link href="~/CssStyle/MasterCss.css" rel="stylesheet" type="text/css" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    <div class="admindiv">
        <h3>Institute Login</h3>
    </div>

    <hr />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="center-block" style="border:solid;">
    <br />
    @if(ViewBag.RejectMessage != null)
    {

        <center><div class=" alert alert-danger">@ViewBag.RejectMessage</div></center>

    }

    @if (Session["InstitutionRegistration"] != null)
    {
        <center><div class=" alert alert-success">@Session["InstitutionRegistration"]</div></center>
    }
    <div class="form-group">
        @Html.LabelFor(model => model.InstitutionID, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.InstitutionID, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your Registered Institution ID" } })
            @Html.ValidationMessageFor(model => model.InstitutionID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Your Password" } })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Login" class="btn btn-success" />
            <br />
            <br />

            <div class="rightContent">
                @Html.ActionLink("Forgot Password ?", "ForgotPassword", "institutes")&nbsp;
                @Html.ActionLink("Forgot UserID ?", "ForgotID", "institutes")
                @Html.ActionLink("Not Registered Yet?", "Create", "institutes")
            </div>

        </div>
    </div>

</div>
    </div>


    }

    <div>
        @Html.ActionLink("Back to Home", "Home","Registrations")
    </div>

@model Project.Models.AdminCred

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/CssStyle/MasterCss.css" rel="stylesheet" type="text/css" />
<link href="~/Scripts/Create.css" rel="stylesheet" type="text/css" />





@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()



    <div class="form-horizontal">

        <hr />
        <div class="admindiv">
            <h3>Admin Login</h3>
        </div>

        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="center-block" style="border:solid;">
            <br />
            <div class="form-group">

                @Html.Label("Username", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Admin_Username, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Admin Username" } })
                    @Html.ValidationMessageFor(model => model.Admin_Username, "", new { @class = "text-danger" })
                    <p class="text-danger">@ViewBag.username</p>
                </div>

            </div>

            <div class="form-group">
                @Html.Label("Password", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Admin_Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Admin Password" } })
                    @Html.ValidationMessageFor(model => model.Admin_Password, "", new { @class = "text-danger" })
                    <p class="text-danger">@ViewBag.password</p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Login" class="btn btn-success" />
                </div>
            </div>
        </div>

    </div>


}

<div>
    @Html.ActionLink("Back to Home", "Home", "Registrations")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

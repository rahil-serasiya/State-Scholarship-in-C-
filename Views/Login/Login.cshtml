@model Project.Models.LoginModel


@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Scripts/Create.css" rel="stylesheet" type="text/css" />


<link href="~/CssStyle/MasterCss.css" rel="stylesheet" type="text/css" />

<style>
    .rightContent {
        margin-left: 70px;
    }
</style>
<script type="text/javascript">

</script>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        <div class="admindiv">
            <h3>Login</h3>
        </div>

        <hr />  
        @if (@TempData["SuccessMessage"]!=null)
                    {
    <h3 class="alert alert-success">@TempData["SuccessMessage"]</h3>
                    }
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="center-block" style="border:solid;">
        <br />
        <div class="form-group">
            @Html.LabelFor(model => model.UserId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your Used ID here" } })
                @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger"  })
                <p class="text-danger">@ViewBag.username</p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" , @placeholder = "Enter your Password here" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                <p class="text-danger">@ViewBag.password</p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UserCategory, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.UserCategory, new List<SelectListItem>
           {
               new SelectListItem{Text="Select Category",Value="Select"},
               new SelectListItem{Text="Student",Value="Student"},
               new SelectListItem{Text="Scholarship Provider",Value="Scholarship Provider"},
               new SelectListItem{Text="Admin",Value="Admin"}

           }, new { htmlAttributes = new { @class = "form-control" }, style = "width: 300px;height:35px;border-radius: 50px;color:black;" })
                @Html.ValidationMessageFor(model => model.UserCategory, "", new { @class = "text-danger" })
                <p class="text-danger">@ViewBag.category</p>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <label class="label-danger">@ViewBag.RejectMessage</label>
            </div>
           
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login" class="btn btn-success" />
                <div class="rightContent">
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;@Html.ActionLink("Forgot Password ?", "ForgotPassword", "Login")<br />
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;  @Html.ActionLink("Forgot UserID ?", "ForgotID", "Login")
                </div>

            </div>
        </div>
    </div>    
</div>


  

    }

    <div>
        @Html.ActionLink("Back to Home", "Home", "Registrations")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
